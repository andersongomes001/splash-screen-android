<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.eti.andersongomes.splashscreen.splashscreen.SplashScreen"
    android:background="@drawable/backgound_color">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="NEW APP"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:layout_below="@+id/logo"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_custom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ff09a1"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:inputType="text" />

        <EditText
            android:id="@+id/senha"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_custom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ff09a1"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:hint="Senha"
            android:inputType="textPassword" />


        <Button
            android:elevation="40dp"
            android:background="@drawable/button_redondo"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/senha"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:text="Logar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
